<!-- ye adress form ka state aur district k liye -->
<script>
  document.getElementById("state").addEventListener("change", function() {
      let state = this.value;   // jo user ne selct district kiya hai use store  karo ? 
      let district = document.getElementById("district");
  
      const data = {
          "uttarPradesh": ["Mirzapur", "Jaunpur", "Basti", "azamgrah", "jhansi"],
          "Maharastra": ["Mumbai", "Pune", "Nagpur", "nasik "],
          "Bihar": ["Sasaram", "Gaya", "Champaran", "Patna"],
          "Jharkhand": ["Dumka", "Bhagalpur", "Dhanbad", "Bokaro the Steel city"], 
          "Bengal": ["Darjeeling", "Medinipur", "Murshidabad", "Dalia"]
      };
  
      district.innerHTML = '<option value="">Select District</option>'; 

      if (state in data) {
          for (let dist of data[state]) { 
              let option = document.createElement("option");
              option.value = dist;
              option.textContent = dist; 
              district.appendChild(option); 
          }
      }
  });
  </script>

