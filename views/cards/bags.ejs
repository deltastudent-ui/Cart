
<% layout("/layouts/boilerplate") %>

<div class="big-contener">
    <div class="row">
    <% for( card of itemUser) { %>
    <div class="card" style="width: 18rem;"> 
        <img src="<%= card.image %>" class="card-img-top img-c" alt="card image" style="height: 15rem;">
        <div class="card-body">
          <div class="description-container">
              <p class="card-text">
                  <b><%= card.title %></b> <br>
                  â‚¹ <%= card.price %> <br>
                  <span class="text-muted"><%= card.description %></span>
                     <input type="checkbox" name="order" value="<%= card._id %>">
                     
              </p>
               <form action="/bags/<%= card._id %>?_method=DELETE" method="post">
                <button class="border-0 bg-transparent p-0">remove</button>
               </form>
          </div>
      </div>
      </div>   

        <% } %>
        <form action="/place-order" method="get">
        <% if(itemUser.length > 0){ %>
          <button type="submit" class=" btn" >Place Order</button>
          <% } else{ %>
              <h1 class=""> Cart is Empty</h1>
            <% } %>
</form>
</div>

</div>  

