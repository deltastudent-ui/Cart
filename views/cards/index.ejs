<% layout("/layouts/boilerplate") %>
<body>
    
             <!-- images -->
   <div class="big-contener">
           <div class="row">
                      
                            <div class="banner-container" >
                              <img src="/image/cookies-5392439_1280.jpg" alt="Supermarket Banner" class="banner-image"> 
                      
                              <!-- Discount Badge -->
                              <div class="discount-badge">Opening Sale Discount 50%</div>
                      
                              <!-- Text Content -->
                              <div class="text-content">
                                  <h1>SuperMarket For bafers</h1>
