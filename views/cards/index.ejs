                              <button class="delivery-badge btn">Cloth shoping</button>
                            </form>
                              <form action="/new" method="get">
                                <button class="btn btnn" style="background-color: aquamarine;"><b>add Item </b> </button>
                              </form>
                          </div>
                      

                           <!-- for two cards -->
                          
                          



                           <!-- index cards -->
                          


                           <div class="card-div">
